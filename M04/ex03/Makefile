################################################################################
#                               VARIABLES:                                     #
################################################################################
NAME		:= main
CPPFLAGS	:= -Wall -Wextra -Werror -std=c++98
CC			:= c++
OBJ_DIR		:= objs
SRC			:= $(wildcard *.cpp)
OBJ			:= $(addprefix $(OBJ_DIR)/, $(addsuffix .o, $(basename $(SRC))))
RM			:= rm -rf

################################################################################
#                                RULES:                                        #
################################################################################
all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(CPPFLAGS) $^ -o $@

$(OBJ_DIR)/%.o: %.cpp | $(OBJ_DIR)
	@$(CC) $(CPPFLAGS) -c $< -o $@
	@printf "Compling... %-10s >>>> %s.\n" "$<" "$@"

run:
	./$(NAME)

$(OBJ_DIR):
	@mkdir -p $@

clean:
	@${RM} $(OBJ_DIR)

fclean: clean
	@${RM} $(NAME)

re: fclean all

.PHONY: all run clean fclean re
################################# (END) ########################################
